<resources>

    
    <style name="AppBaseTheme" parent="android:Theme.Light">
         <item name="android:editTextStyle">@style/conpasEditText</item>
         <item name="android:buttonStyle">@style/ButtonTheme</item>
          <item name="android:textColor" >@color/activeframe</item>
         </style>
 
    <style name="AppTheme" parent="AppBaseTheme">
       <item name="android:editTextStyle">@style/conpasEditText</item> 
       <item name="android:buttonStyle">@style/ButtonTheme</item> 
    <item name="android:textColor" >@color/activeframe</item>
    <item name="@android:textColor" >@color/activeframe</item>
       </style>
<style name="conpasEditText" parent="@android:style/Widget.EditText">
    <item name="android:textColor" >@color/activeframe</item>
</style>
    <style name="MyAlertDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:background">#ffffff</item>
    </style>
    <style name="ButtonTheme" parent="@android:style/Widget.Button">  
       <item name="android:textColor">#555555</item> 
       <item name="android:textStyle">bold</item>      
    </style>

</resources>